<%-include('header.ejs')%>
<section class="container bg-light shadow mt-5 rounded p-3">
    <div class="row">
     <div class="col-md-12">
        <h3>Create Trip Of <b class="text-primary"><%-vehical.number%></b></h3>
     </div>
     <div class="col-md-6 mt-3">
        <form action="/create-trip" method="post">
            <input type="hidden" name="vid" value="<%-vehical.id%>">
       <label class="mb-1">From </label> 
       <input class="form-control mb-3" type="text" name="from_location" required>
    </div>
    <div class="col-md-6 mt-3">
        <label class="mb-1">To </label> 
        <input class="form-control mb-3" type="text" name="to_location" required>
     </div>

     <div class="col-md-4 mt-3">
        <label class="mb-1">Intial Distance </label> 
        <input class="form-control mb-3" type="number" name="start" required>
     </div>
     <div class="col-md-4 mt-3">
        <label class="mb-1">Final Distance </label> 
        <input class="form-control mb-3" type="number" name="end" required>
     </div>
     <div class="col-md-4 mt-3">
        <label class="mb-1">Trip Date </label> 
        <input class="form-control mb-3" type="date" name="date" required>
     </div>
     <div class="col-md-12 mt-3 text-center">
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
     </div>
    </div>
</section>
<%-include('footer.ejs')%>