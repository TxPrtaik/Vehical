<%-include('header.ejs')%>
<section class="container mt-5 p-3 bg-light shadow">
    <div class="row">
        <div class="col-md-12">
            <h3>Trips of <b class="text-primary"><%-vehical.number%></b></h3>
        </div>
        <table class="table table-dark table-striped text-center">
            <tr>
                <th>SrNo</th>
                <th>Trip From</th>
                <th>Trip To</th>
                <th>Intial Distance</th>
                <th>Final Distance</th>
                <th>Distance</th>
                <th>Trip Date</th>
            </tr>
            <% let tld=0;
            for(let i=0;i<info.length;i++){
                tld+=Number(info[i].distance);
                %>
                <tr>
                    <td><%-i+1%></td>
                    <td><%-info[i].from_dist%></td>
                    <td><%-info[i].to_dist%></td>
                    <td><%-info[i].initial_km%> Km</td>
                    <td><%-info[i].ending_km%> Km</td>
                    <td><%-info[i].distance%></td>
                    <td><%-info[i].date%></td>
                </tr>
                <%}%>
                <tr>
                    <th colspan="6">Total Distance</th>
                    <th><%-tld%> Km</th>
                </tr>
        </table>
    </div>
</section>
<%-include('footer.ejs')%>